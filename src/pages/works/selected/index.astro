---

import MainLayout from "../../../layouts/mainLayout.astro";
import { getCollection } from "astro:content";
import Selected from "../../../components/selected.astro";


const artworks = await getCollection("artworks", (entry) => entry.data.selected);

// Sort the resolved array
artworks.sort((a, b) => (a.data.priority || 0) - (b.data.priority || 0));


---

<MainLayout title="Sydney Piel - Selected" description="hi" activePage={1} sidebarPage={1} headerTitle="selected works" headerInfo="">




    {artworks.map((p) => <Selected artwork={p}/>)}
</MainLayout>
